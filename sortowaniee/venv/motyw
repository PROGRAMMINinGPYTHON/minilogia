from turtle import *


def motyw(ile):
    pass


def zygzak(ile,heading):
    a = 600 / ((ile + 1) * 22 + 1)
    duzy_kwadrat_lewy(ile,heading)
    pu()
    lt(90)
    fd(5 * a)
    lt(90)
    fd(17 * a)
    pd()
    duzy_kwadrat_prawy(ile,heading)


def wzorek_prawy(ile, kolor, kąt):
    setheading(kąt)
    a = 600 / ((ile + 1) * 22 + 1)
    fillcolor(kolor)
    begin_fill()
    rządek(ile, 11, kolor)
    lt(90)
    fd(a)
    rządek(ile, 9, kolor)
    lt(90)
    fd(a)
    rządek(ile, 8, kolor)
    lt(90)
    fd(a)
    rządek(ile, 5, kolor)
    lt(90)
    fd(a)
    rządek(ile, 4, kolor)
    lt(90)
    rządek(ile, 2, kolor)


def duzy_kwadrat_lewy(ile,heading):
    a = 600 / ((ile + 1) * 22)
    wzorek_lewy(ile, "blue", 90+heading)
    pu()
    lt(90)
    fd(5 * a)
    rt(90)
    fd(5 * a)
    pd()
    wzorek_lewy(ile, "red", -90+heading)


def wzorek_lewy(ile, kolor, kąt):
    a = 600 / ((ile + 1) * 22 + 1)
    setheading(kąt)
    rządek(ile, 11, kolor)
    rt(180)
    fd(a)
    lt(90)
    rządek(ile, 9, kolor)
    rt(180)
    fd(a)
    lt(90)
    rządek(ile, 8, kolor)
    rt(180)
    fd(a)
    lt(90)
    rządek(ile, 5, kolor)
    rt(180)
    fd(a)
    lt(90)
    rządek(ile, 4, kolor)
    rt(180)
    fd(a)
    lt(90)
    rządek(ile, 1, kolor)


def duzy_kwadrat_prawy(ile,heading):
    a = 600 / ((ile + 1) * 22 + 1)
    wzorek_prawy(ile, "blue", 90+heading)
    pu()
    rt(90)
    fd(4 * a)
    lt(90)
    fd(6 * a)
    lt(90)
    pd()
    wzorek_prawy(ile, "red", -90+heading)


def kwadrat(ile, kol):
    a = 600 / ((ile + 1) * 22 + 1)
    fillcolor(kol)
    begin_fill()
    for i in range(4):
        fd(a)
        lt(90)
    end_fill()


def rządek(ile, jak_dlugi, kol):
    a = 600 / ((ile + 1) * 22 + 1)
    for i in range(jak_dlugi):
        kwadrat(ile, kol)
        fd(a)

def gora_lub_dol(ile,kąt):
    a = 600 / ((ile + 1) * 22 + 1)
    for i in range(ile):
        zygzak(ile,kąt)
        rt(90)
        pu()
        fd(4*a)
        lt(90)
        fd(6*a)
        lt(90)
        pd()

def ramka(ile):
    a = 600 / ((ile + 1) * 22 + 1)
    # pu()
    # setpos((-450/2)-5*a,0)
    # pd()
    # gora_lub_dol(ile,0)
    pu()
    setpos(450/2,-22*a)
    pd()
    gora_lub_dol(ile,180)
    zygzak(ile,90)
    pu()
    setheading(90)
    fd(6*a)
    rt(90)
    fd(4*a)
    pd()
    gora_lub_dol(ile,0)
    # setpos(450/2,0)
    pd()
    # lt(90)
    # fd(3*a)
    zygzak(ile,-90)



speed(0)
ramka(8)
print(pos())

done()
